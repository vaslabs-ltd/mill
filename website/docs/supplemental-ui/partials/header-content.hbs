  <style>
  /* auto-hyphenation is super ugly */
  *{
    hyphens: manual !important;
  }

  /* Reduce font size from 17px to something reasonable */
  .doc {
   font-size: 16px !important;
  }
  .doc pre {
   font-size: 14px !important;
  }
  /* Shrink unreasonably large top bar */
  nav.navbar{
    height: 2.5rem;
  }
  body.article{
    padding-top: 2.5rem;
  }
  div.nav-container{
    top: 2.5rem;
  }
  div.toolbar{
    top: 2.5rem;
  }
  aside.nav{
    top: 2.5rem;
    height: calc(100vh - 2.5rem);
  }
  .version-warning-banner {
    background: #fff3cd;
    border-bottom: 1px solid #f5c06a;
    color: #6d3f00;
    font-size: 0.95rem;
    line-height: 1.4;
    padding: 0.6rem 1rem;
    text-align: center;
  }
  .version-warning-banner a {
    color: #6d3f00;
    font-weight: 600;
    text-decoration: underline;
  }
  </style>
  <script>
  gtag('config', 'AW-16649289906');

  document.addEventListener('DOMContentLoaded', function() {
  const links = document.querySelectorAll('a');
    links.forEach(link => {
      if (link.textContent.trim().toLowerCase() === 'download') {
        link.addEventListener('click', function(event) {
          console.log("download link clicked")
          gtag('event', 'conversion', {'send_to': 'AW-16649289906/rsphCKfVq8QZELKBgIM-'});
        });
      }
    });

    const warningTemplate = document.getElementById('version-warning-banner-template');
    const articleDoc = document.querySelector('article.doc');
    if (warningTemplate && articleDoc && warningTemplate.content.firstElementChild) {
      articleDoc.prepend(warningTemplate.content.firstElementChild.cloneNode(true));
    }
  });
  </script>
